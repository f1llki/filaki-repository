#include <iostream>
#include <string>
using namespace std;

int main() {
    string str = "AaBbCcDd"; //Ñòðî÷êà

    //Ñèìâîëû ñ ÷åòíûìè èíäåêñàìè
    cout << "str[::2] ";
    for (size_t i = 0; i < str.size(); i++) { //×èòàþ âñå èíäåêñû ñòðî÷êè
        if (i % 2 == 0) { //Ïðîâåðêà ÷åòíûé ëè èíäåêñ
            cout << str[i]; //Âûâîä ñèìâîëîâ ñ ÷åòíûìè èíäåêñàìè
        }
    }
    cout << endl; // Ïåðåõîä

    //Ñèìâîëû ñ íå÷åòíûìè èíäåêñàìè
    cout << "str[1::2] ";
    for (size_t i = 0; i < str.size(); i++) { //×èòàþ âñå èíäåêñû
        if (i % 2 == 1) { //Ïðîâåðêà íå÷åòíûé ëè èíäåêñ
            cout << str[i]; //Âûâîä ñèìâîëîâ ñ íå÷åòíûìè èíäåêñàìè
        }
    }
    cout << endl; //Ïåðåõîä

    return 0;
}
